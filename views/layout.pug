    block header
      
      style(type="text/css").
        
        body {
          font-family: Noto Sans;
          color: #2B303A;
          background-color: #FDF9E7;
        }
        
        h1 {
          font-size: 30px;
        }
      
        
        .headermain img {
          box-sizing: border-box;
          float: left;
          width: 20%;
          height: auto;
